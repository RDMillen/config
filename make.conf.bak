# Compile Flags.

COMMON_FLAGS="-march=skylake -O2 -pipe"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

MAKEOPTS="-j8"

ACCEPT_LICENSE="@FREE"
ACCEPT_KEYWORDS="~amd64"

CHOST="x86_64-pc-linux-gnu"
CPU_FLAGS_X86="aes avx avx2 f16c fma3 mmx mmxext pclmul popcnt sse sse2 sse3 sse4_1 sse4_2 ssse3"

USE="acpi alsa bspwm device-mapper elogind flac gtk ipv6 lvm policykit vulkan zsh-completion -bindist -branding -cdr -consolekit -dvd -kde -NetworkManager -pulseaudio -qt4 -qt5 -systemd"

FEATURES="ccache"
CCACHE_DIR="/var/cache/ccache"

# Directories

PORTDIR="/var/db/repos/gentoo"
DISTDIR="/var/cache/distfiles"
PKGDIR="/var/cache/binpkgs"

# Build Output

LC_MESSAGES=C

# Localisation

LINGUAS="en_GB"
L10N="en-GB"

# Devices

VIDEO_CARDS="intel i965"
INPUT_DEVICES="libinput"

# Mirrors

GENTOO_MIRRORS="rsync://mirror.bytemark.co.uk/gentoo/ https://mirror.bytemark.co.uk/gentoo/ https://www.mirrorservice.org/sites/distfiles.gentoo.org/"

# Platform Settings

GRUB_PLATFORMS="efi-64"
QEMU_SOFTMMU_TARGETS="x86_64"
QEMU_USER_TARGETS="x86_64"

# Emerge

EMERGE_DEFAULT_OPTS="-av"
